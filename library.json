{
  "name": "WindVane",
  "version": "1.0.0",
  "description": "Professional Arduino library for wind direction sensors with advanced calibration and interactive menu system",
  "keywords": "wind, direction, sensor, calibration, menu, arduino, esp32",
  "repository": {
    "type": "git",
    "url": "https://github.com/wonderful123/Windvane-Calibrator.git"
  },
  "authors": [
    {
      "name": "WindVane Team",
      "email": "team@windvane.com"
    }
  ],
  "license": "MIT",
  "frameworks": "arduino",
  "platforms": ["espressif32", "native", "atmelavr"],
  "build": {
    "srcDir": "src",
    "includeDir": "include",
    "flags": [
      "-std=gnu++17"
    ]
  },
  "dependencies": {},
  "examples": [
    "examples/BasicWindVane",
    "examples/AdvancedCalibration", 
    "examples/CompleteWindVaneSystem",
    "examples/HostSimulation"
  ],
  "export": {
    "include": "include",
    "exclude": [
      "examples/*/platformio.ini",
      "examples/*/README.md"
    ]
  }
}